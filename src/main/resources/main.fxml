<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="1080.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.mainController">
   <top>
      <HBox prefHeight="80.0" prefWidth="1924.0" style="-fx-background-color: #025373;" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="810.0" text="Procesadora MAS VIP" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Oswald Bold" size="32.0" />
               </font>
               <graphic>
                  <Region prefHeight="55.0" prefWidth="330.0" />
               </graphic>
            </Label>
            <Region prefHeight="80.0" prefWidth="256.0" />
            <StackPane prefHeight="80.0" prefWidth="368.0">
               <children>
                  <TextField fx:id="buscarPlanilla" onAction="#btnBuscarPlanillaAction" prefHeight="55.0" prefWidth="350.0" promptText="Buscar Planilla">
                     <font>
                        <Font name="Oswald Light" size="24.0" />
                     </font>
                  </TextField>
               </children>
            </StackPane>
            <StackPane prefHeight="80.0" prefWidth="517.0">
               <children>
                  <Button fx:id="addButton" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addPlanillaAction" prefHeight="55.0" prefWidth="205.0" style="-fx-background-color: #16a34a;" text="Nueva Planilla" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Oswald Regular" size="27.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <Region />
                     </graphic>
                  </Button>
               </children>
            </StackPane>
         </children>
      </HBox>
   </top>
</BorderPane>
